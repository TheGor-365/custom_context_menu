<%= render @todo %>

<div class="btn-group my-5">
  <%= link_to "Edit this todo", edit_todo_path(@todo), class: "btn btn-sm btn-outline-dark" %>
  <%= link_to "Back to todos", todos_path, class: "btn btn-sm btn-outline-dark" %>
  <%= button_to "Destroy this todo", @todo, method: :delete, class: "btn btn-sm btn-outline-dark" %>
</div>
